@model IEnumerable<Entities.Concrete.AdvertType>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script>
    $(document).ready( function () {
        $('#table_id').DataTable(
            {
                "language": {
                    "url" : "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
                }
            }
        );
    } );
</script>

<h2>İlan Türü Kayıtları</h2>

<a class="btn btn-outline-dark mt-2 mb-2" href="/AdvertType/Create/">Yeni İlan Türü Ekle</a>


<table class="table table-striped table-sm" id="table_id">
    <thead>
    <tr>
        <th>İlan Türü Id</th>
        <th>İlan Türü Adı</th>
        <th>İşlemler</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td><a class="btn btn-primary btn-sm" href="/AdvertType/Edit/@item.Id">Düzenle</a> | <a class="btn btn-danger btn-sm" href="/AdvertType/Delete/@item.Id">Sil</a></td>
        </tr>
    }

    </tbody>
</table>